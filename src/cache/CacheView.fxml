<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<Pane xmlns:fx="http://javafx.com/fxml/1" prefHeight="500" prefWidth="800" fx:controller="cache.CacheViewController">
	<children>
		<Label text="Cached files:" layoutX="5" layoutY="10" />
		<ListView fx:id="fileListView" prefHeight="435" prefWidth="390"
			layoutX="5" layoutY="30" />
		<Button fx:id="refreshButton" alignment="CENTER" onAction="#refreshButtonPressed"
			prefWidth="80" text="Refresh" layoutX="230" layoutY="475" />
		<Button fx:id="clearButton" onAction="#clearButtonPressed"
			alignment="CENTER" prefWidth="80" text="Clear cache" layoutX="315"
			layoutY="475" />
		<Label text="Cache log:" layoutX="410" layoutY="10" />
		<TextArea fx:id="logArea" prefHeight="470" prefWidth="390" layoutX="410" layoutY="30" />
	</children>
</Pane>